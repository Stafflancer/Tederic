<div class="product-item">
  <a href="{{ path('entity.node.canonical', {'node': 30}, {'query': {'series_sub_category': term.id}}) }}" style="background-color: {{ content.field_background_color.0|raw }};" >
    <div class="product-img">
      {{ content.field_image.0 }}
    </div>

    {% set pc = content.field_parent_category.0["#plain_text"] %}

    {% if 'NEO' in pc %}
      {% set pc = 'NEO' %}
    {% elseif 'DREAM' in pc %}
      {% set pc = 'DREAM' %}
    {% endif %}

    <div class="product-title {{ ("pc-" ~ pc)|clean_class }}">
      {% set term_name = name.0["#context"]["value"] %}

      {% if 'NEO' in pc %}
        {{ term_name|replace({" ": "<span>â€¢</span>"})|raw }}
      {% elseif 'DREAM' in pc %}
        {{ (term_name ~ "<span>.</span>")|raw }}
      {% else %}
        {{ term_name }}
      {% endif %}
    </div>

    <div class="product-sub-title">
      {{ content.description }}
    </div>
  </a>
</div>
