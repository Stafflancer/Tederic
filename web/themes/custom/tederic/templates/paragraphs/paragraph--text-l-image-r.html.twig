{%
  set classes = [
    paragraph.bundle|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
    'text-section'
  ]
%}

<div{{ attributes.addClass(classes) }}>
  <div class="row">
    <div class="small-12 medium-6 column">
      <div class="text-max-width">

        {% if content.field_subtitle.0 %}
          <div class="sub-title">{{ content.field_subtitle }}</div>
        {% endif %}

        {% if content.field_title.0 %}
          <div class="title">{{ content.field_title }}</div>
        {% endif %}

        {% if content.field_text.0 %}
          <div class="text-large">{{ content.field_text }}</div>
        {% endif %}
      </div>
    </div>

    <div class="small-12 medium-6 order-1">
      {{ content.field_image_crop }}
    </div>
  </div>
</div>
