{%
  set classes = [
    paragraph.bundle|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
<div{{ attributes.addClass(classes) }}>

  <div class="row expanded">
    <div class="large-4">
      <div class="show-mobile">{{ content.field_icon }}</div>
      {{ content.field_image_crop }}
    </div>
    <div class="large-8">
      <div class="row">
        <div class="large-8">
          <div class="title">{{ content.field_text }}</div>
        </div>
        <div class="large-4">
          {{ content.field_text_2 }}
        </div>
      </div>
    </div>
  </div>
</div>
